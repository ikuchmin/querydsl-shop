<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="ordersTable"
        messagesPack="com.company.shop.web.screens.order">
    <data readOnly="true">
        <collection id="ordersDc"
                    class="com.company.shop.entity.Order"
                    view="order-browse-view">
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from shop_Order e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ordersTable"
            spacing="true">
        <filter id="filter"
                applyTo="ordersTable"
                dataLoader="ordersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ordersTable"
                    width="100%"
                    dataContainer="ordersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="commitOrder"
                        caption="msg://commitOrder.caption"
                        trackSelection="true"/>
            </actions>
            <columns>
                <column id="number"/>
                <column id="orderStatus"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ordersTable.create"/>
                <button id="editBtn" action="ordersTable.edit"/>
                <button id="removeBtn" action="ordersTable.remove"/>
                <button id="commitOrderBtn" action="ordersTable.commitOrder"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
